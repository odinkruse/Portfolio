<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.naoclientandroidbuttonexample.MainActivity$PlaceholderFragment" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_world" />

    <Button
        android:id="@+id/walk"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/stand"
        android:layout_below="@+id/stand"
        android:text="Walk" />

    <Button
        android:id="@+id/stand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:text="Stand" />

    <Button
        android:id="@+id/sit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/stand"
        android:layout_alignBottom="@+id/stand"
        android:layout_toRightOf="@+id/stand"
        android:text="Sit" />

    <Button
        android:id="@+id/talk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_toRightOf="@+id/sit"
        android:text="Talk" />

    <Button
        android:id="@+id/connect"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/shiftright"
        android:layout_below="@+id/shiftright"
        android:text="Connect" />

    <Button
        android:id="@+id/turnright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/walk"
        android:layout_below="@+id/kick"
        android:text="Turn Right" />

    <Button
        android:id="@+id/kick"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/walk"
        android:layout_alignRight="@+id/talk"
        android:text="Kick" />

    <Button
        android:id="@+id/turnleft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/kick"
        android:layout_toRightOf="@+id/sit"
        android:text="Turn Left" />

    <Button
        android:id="@+id/shiftleft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/turnleft"
        android:layout_below="@+id/turnleft"
        android:layout_centerVertical="true"
        android:text="Shift Left" />

    <Button
        android:id="@+id/shiftright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/turnright"
        android:layout_alignLeft="@+id/turnright"
        android:text="Shift Right" />

    <Button
        android:id="@+id/exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/connect"
        android:layout_below="@+id/connect"
        android:text="Exit" />

</RelativeLayout>
